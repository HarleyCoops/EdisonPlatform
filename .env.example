# API Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Required: Your API authentication key
API_KEY=your_api_key_here

# Required: Base URL for the API
API_BASE_URL=https://api.example.com/v1

# Optional: Request timeout in seconds (default: 30)
# API_TIMEOUT=30

# Optional: Verify SSL certificates (default: true)
# API_VERIFY_SSL=true

# Optional: Maximum number of retry attempts (default: 3)
# API_MAX_RETRIES=3

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# Optional: Environment identifier (development, staging, production)
# ENVIRONMENT=development
